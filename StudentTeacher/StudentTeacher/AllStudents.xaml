<Window x:Class="StudentTeacher.AllStudents"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AllStudents" Height="300" Width="500">
    <Grid>
        <DataGrid AutoGenerateColumns="False" HorizontalAlignment="Left" Name="gridStudents" VerticalAlignment="Top">
            <DataGrid.Columns >
                <DataGridTextColumn Header="Name" Binding="{Binding Path = studentName}"/>
                <DataGridTextColumn Header="Faculty Number" Binding="{Binding Path=facNum}" Width="*"/>
                <DataGridTextColumn Header="EGN" Binding="{Binding Path=studentEGN}" Width="*" />
                <DataGridTextColumn Header="Faculty" Binding="{Binding Path=faculty}" Width="*" />
                <DataGridTextColumn Header="Specialty" Binding="{Binding Path=specialty}" Width="*" />
                <DataGridTextColumn Header="Gender" Binding="{Binding Path=gender}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
