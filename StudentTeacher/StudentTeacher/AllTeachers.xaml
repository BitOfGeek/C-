<Window x:Class="StudentTeacher.AllTeachers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AllTeachers" Height="300" Width="300">
    <Grid>
        <DataGrid AutoGenerateColumns="False" HorizontalAlignment="Left" Name="gridTeachers" VerticalAlignment="Top">
            <DataGrid.Columns >
                <DataGridTextColumn Header="Name" Binding="{Binding Path = teacherName}"/>
                <DataGridTextColumn Header="EGN" Binding="{Binding Path=teacherEGN}" Width="*" />
                <DataGridTextColumn Header="Department" Binding="{Binding Path=department}" Width="*" />
                <DataGridTextColumn Header="Gender" Binding="{Binding Path=gender}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>       
    </Grid>
</Window>
